        </Border>
        <StackPanel Margin="158,252,174,71" Orientation="Vertical">
            <Button Content="NOUVELLE COMPETITION" Style="{StaticResource removeButton}" Background="#042a63" Height="78" Margin="0,0,255,0" Click="NewCompet_Click" Width="198" HorizontalAlignment="Right"/>
